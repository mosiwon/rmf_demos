<?xml version='1.0'?>

<launch>
    <arg name="use_sim_time" default="false" />
    <arg name="failover_mode" default="false" />

    <!-- Common launch -->
    <include file="$(find-pkg-share rmf_demos)/common.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="viz_config_file" value="$(find-pkg-share rmf_demos)/include/pinklab/pinklab.rviz" />
        <arg name="config_file"
            value="$(find-pkg-share rmf_demos_maps)/pinklab/pinklab.building.yaml" />
    </include>

    <!-- Turtlebot Fleet adapter-->
    <include file="$(find-pkg-share rmf_turtlebot4_fleet_adapter)/launch/fleet_turtlebot_adapter.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="nav_graph_file"
            value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/0.yaml" />
        <arg name="config_file"
            value="$(find-pkg-share rmf_turtlebot4_fleet_adapter)/config.yaml" />
    </include>

    <!-- Minibot Fleet adapter-->
    <include file="$(find-pkg-share rmf_minibot_fleet_adapter)/launch/fleet_minibot_adapter.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)" />
        <arg name="nav_graph_file"
            value="$(find-pkg-share rmf_demos_maps)/maps/pinklab/nav_graphs/1.yaml" />
        <arg name="config_file"
            value="$(find-pkg-share rmf_minibot_fleet_adapter)/config.yaml" />
    </include>
</launch>